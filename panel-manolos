<body>

  <div class="login-box" id="loginBox">
    <h2>ğŸ” Acceso al Panel</h2>
    <input type="password" id="password" placeholder="ContraseÃ±a">
    <button onclick="verificarLogin()">Ingresar</button>
    <p id="loginError" style="color:red;"></p>
  </div>

  <div class="panel-box" id="panelBox" style="display:none;">
    <h2>ğŸ“‹ Pedidos Recibidos</h2>
    <div id="pedidosContainer">Cargando pedidos...</div>
  </div>

  <script>
    const CLAVE = "manolos2025";
    const SCRIPT_URL = "https://script.google.com/macros/s/AKfycbxhMJmPJG8_Lkcn5yMdEW9_sldAHcWgNmt6OugicspTbY9WaJZlj7A35x4YZDi6MGq34g/exec";

    function verificarLogin() {
      const pass = document.getElementById('password').value;
      if (pass === CLAVE) {
        document.getElementById('loginBox').style.display = 'none';
        document.getElementById('panelBox').style.display = 'block';
        cargarPedidos();
      } else {
        document.getElementById('loginError').innerText = "âŒ ContraseÃ±a incorrecta.";
      }
    }

    function cargarPedidos() {
      fetch(SCRIPT_URL)
        .then(res => res.json())
        .then(data => {
          const container = document.getElementById('pedidosContainer');
          container.innerHTML = '';
          data.forEach(pedido => {
            const div = document.createElement('div');
            div.className = 'pedido-card';
            div.innerHTML = `
              <strong>Orden:</strong> ${pedido.NumeroOrden}<br>
              <strong>Cliente:</strong> ${pedido.NombreCompleto || pedido.Nombre || "â€”"}<br>
              <strong>Fecha Recogida:</strong> ${pedido.FechaRecogida || "â€”"}<br>
              <strong>Estado:</strong> ${pedido.EstadoPedido || 'ğŸ•’ Pendiente'}<br>
              <button class="estado-btn proceso" onclick="cambiarEstado('${pedido.NumeroOrden}', 'En proceso')">ğŸ• En proceso</button>
              <button class="estado-btn listo" onclick="cambiarEstado('${pedido.NumeroOrden}', 'Listo')">âœ… Listo</button>
              <button class="estado-btn cancelado" onclick="cancelarPedido('${pedido.NumeroOrden}')">âŒ Cancelar</button>
              <br><button onclick="imprimirPedido('${pedido.NumeroOrden}')" style="margin-top:8px;">ğŸ§¾ Imprimir</button>
            `;
            container.appendChild(div);
          });
        })
        .catch(err => {
          document.getElementById('pedidosContainer').innerHTML = "âŒ Error al cargar pedidos.";
        });
    }

    function cambiarEstado(numero, estado) {
      fetch(SCRIPT_URL, {
        method: 'POST',
        body: JSON.stringify({ accion: 'actualizarEstado', numeroOrden: numero, nuevoEstado: estado }),
        headers: { 'Content-Type': 'application/json' }
      }).then(() => cargarPedidos());
    }

    function cancelarPedido(numero) {
      const motivo = prompt("Motivo de cancelaciÃ³n:");
      if (!motivo) return;
      fetch(SCRIPT_URL, {
        method: 'POST',
        body: JSON.stringify({ accion: 'cancelarPedido', numeroOrden: numero, nuevoEstado: 'Cancelado', motivo: motivo }),
        headers: { 'Content-Type': 'application/json' }
      }).then(() => cargarPedidos());
    }

    function imprimirPedido(numero) {
      window.open(`imprimir.html?orden=${numero}`, '_blank');
    }
  </script>

</body>
</html>
